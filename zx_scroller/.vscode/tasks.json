{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SjASMPlus",
            "type": "shell",
            "command": "c:/zx/sjasmplus",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "--nologo",
                "--sld=build/${fileBasenameNoExtension}.sld",
                "--fullpath",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$errmatcher-sjasmplus",
            "dependsOn":["Compile font"]
        },

        {
            "label": "Compile font",
            "type": "shell",
            "command": "c:/zx/scroll/zx_scroller/resources/compile_font.bat",
            "group": "build",
        }

    ]
}
